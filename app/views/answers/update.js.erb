$('#edit-answer-errors-' + '<%= @answer.id %>').html('<%= render 'shared/errors', resource: @answer %>');

<% if !@answer.errors.present? %>
  $('#body-answer-' + '<%= @answer.id %>').html('<%= @answer.body %>');
  $('form#edit-answer-' + '<%= @answer.id %>').addClass('hidden')
  $('.edit-answer-link').show()
<% end %>
